<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/author_name"
                android:textColor="@color/primaryText"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/authorTb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/submitroundbtn"
                android:hint="@string/enter_your_name"
                android:maxLines="1"
                android:padding="16dp"
                android:textColor="@color/secondaryTextLight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/idea_title"
                android:textColor="@color/primaryText"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/submitTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/submitroundbtn"
                android:hint="@string/enter_the_idea_s_title"
                android:padding="16dp"
                android:textColor="@color/secondaryTextLight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/select_the_idea_s_category"
                android:textColor="@color/primaryText"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primaryText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="16dp"
                android:text="@string/idea_description"
                android:textColor="@color/primaryText"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ideaDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/submitroundbtn"
                android:hint="@string/enter_an_indepth_description_of_the_idea"
                android:padding="16dp"
                android:textColor="@color/secondaryTextLight" />

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="16dp"
                android:background="@drawable/submitbtn"
                android:text="@string/submit_idea"
                android:textColor="@color/primaryText" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>